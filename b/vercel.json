{
    "version": 2,
    "builds": [
        {
            "src": "api/vercel_handler.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "installCommand": "pip install -r requirements.txt --ignore-installed"
            }
        },
        {
            "src": "uploads/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/vercel_handler.py"
        }
    ]
}