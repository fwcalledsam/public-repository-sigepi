{
    "version": 2,
    "builds": [
        {
            "src": "api/vercel_handler.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "uploads/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/vercel_handler.py"
        }
    ]
}