{
    "version": 2,
    "builds": [
        {
            "src": "api/vercel_handler.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "25mb",
                "runtime": "python3.9",
                "includeFiles": [
                    "api/*.py",
                    "models.py",
                    "routes.py",
                    "services.py",
                    "config.py",
                    "image_service.py"
                ],
                "installCommand": "pip install -r requirements.txt --ignore-installed"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/vercel_handler.py"
        }
    ]
}